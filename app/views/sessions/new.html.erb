<h1>Sign in</h1>
<% if @error%>
  <div id="error_explanation">
    <p><%= @error %></p>
  </div>
<% end %>

<%= form_tag('/signin') do %>

  <p><%= label_tag :username %>
  <br>
  <%= text_field_tag :username %></p>
  <p><%= label_tag :password %>
  <br>
  <%= password_field_tag :password %></p>
  <%= submit_tag 'Sign In' %>
<% end %>

<br><br>
<div>
<%= form_with(model: @benefit, local: true) do |f| %>
<%= render 'shared/errors', instance: @benefit %>

  <div class="field">
    <%= f.label :cash_back %>
    <br>
    <%= f.select :cash_back, @benefit.percentage_cash_back %>
  </div>
<br>
  <div class="field">
    <%= f.label :category %>
    <br>
    <%= f.select :category, @benefit.categories %>
  </div>
<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
<br>
<%= link_to 'Delete', benefit_path(@benefit), method:'delete' %>

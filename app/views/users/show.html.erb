<h1>Welcome <%= @user.username %>!</h1>
<h3>These are your cards</h3>
<ul>
  <% @user.cards.each do |c| %>
  <li><%= link_to c.name, card_path(c) %></li>
  <% end %>
</ul>

<%= link_to 'Add new card', new_card_url %>
<br><br>

<h3>These are your budgets for this month</h3>
<ul>
  <% current_budgets.each do |b| %>
  <li><%= link_to b.name, budget_path(b) %></li>
  <% end %>
</ul>

<%= link_to 'Add new budget', new_budget_url %> <%= link_to 'See past budgets', budgets_path %>
